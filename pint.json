{
    "preset": "laravel",
    "rules": {
        "class_attributes_separation": {
            "elements": {
                "const": "none"
            }
        },
        "class_definition": {
            "multi_line_extends_each_single_line": false
        },
        "concat_space": {
            "spacing": "one"
        },
        "no_superfluous_phpdoc_tags": false,
        "phpdoc_align": false
    },
    "exclude": [
        "public"
    ],
    "notName": [
        "server.php"
    ]
}
